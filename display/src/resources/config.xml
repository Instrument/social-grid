<config>
  
  <!-- colors for loading screen -->
  <loadingBackgroundColor>#efefef</loadingBackgroundColor>
  <loadingCircleColor>#3bb3c5</loadingCircleColor>
  <loadingIconColor>#0a201d</loadingIconColor>
  <loadingTextColor>#080808</loadingTextColor>
  
  <!-- colors for twitter content -->
  <twitterTextColor>#7c7c7c</twitterTextColor>
  <twitterHighlightColor>#1babbe</twitterHighlightColor>
  <twitterBackgroundColor>#f2f2f2</twitterBackgroundColor>
  
  <!-- colors for large twitter content -->
  <largeTwitterTextColor>#f2f2f2</largeTwitterTextColor>
  <largeTwitterHighlightColor>#f2f2f2</largeTwitterHighlightColor>
  <largeTwitterBackgroundColor>#1babbe</largeTwitterBackgroundColor>
  
  <!-- colors for instagram content -->
  <instagramTextColor>#f2f2f2</instagramTextColor>
  <instagramHighlightColor>#1babbe</instagramHighlightColor>
  
  <!-- whether to pull social media directly from source (instead of from moderation tool) -->
  <pullSocialDirectly>true</pullSocialDirectly>
  
