  <twitterHashtags>instrumentoutpost</twitterHashtags>
  <instagramHashtags>instrumentoutpost</instagramHashtags>
  
  <!-- if pull social directly, api access token for instagram -->
  <instagramAccessToken>3694361.6bd3b25.73184e078dc24687a4736ab1748ac251</instagramAccessToken>
  
